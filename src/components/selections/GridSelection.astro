  featureSelection,
  instrumentSelection,
  softwareSelection,
  brokerSelection,
} from "@/libs/data/selections";
import GridContainer from "@/components/selections/GridContainer.astro";
---

<div
  class="flex flex-col lg:gap-[40px] md:gap-[30px] gap-[20px] responsive-section margin-section"
>
  <GridContainer
    selections={featureSelection}
    type="feature"
