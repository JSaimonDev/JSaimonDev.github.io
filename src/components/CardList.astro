---
interface Props {
  name: string;
  shortDescription: string;
}

const { name, shortDescription } = Astro.props;
---

<div
  class="h-[160px] bg-[#FFFFFF] p-8 hover:shadow-[0_0_10px_2px_rgba(217,86,19,1)] cursor-pointer"
>
  <p class="text-2xl mb-4 font-bold">{name}</p>
  <p class="text-base text-medium-grey">{shortDescription}</p>
</div>
