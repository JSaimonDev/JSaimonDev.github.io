    <a href={firm.link}>
      <img src={firm.logoText} />
    </a>
  </div>
  <div class="flex flex-col px-[40px]">
    <TitleBusinessInfo title="Sede" />
    <p class="flex flex-col justify-center flex-1">{hq}</p>
  </div>
