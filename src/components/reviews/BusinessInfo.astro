---
import { type Firm } from "@/libs/data/firms";
import TitleBusinessInfo from "./TitleBusinessInfo.astro";

interface Props {
  firm: Firm;
  hq: string;
  foundation: number;
  ceo: string;
}

const { firm, hq, foundation, ceo } = Astro.props;
