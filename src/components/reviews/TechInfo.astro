---
import { type Firm } from "@/libs/data/firms";
import TitleInfo from "./TitleInfo.astro";

interface Props {
  instruments: string;
  fee: string;
  leverage: string;
  currency: string;
  brokers: string;
  platforms: string;
}

const { instruments, fee, leverage, currency, brokers, platforms } =
  Astro.props;
---

<div class="info-section">
  <h2
    style="background: linear-gradient(to right, #454545, #929292); -webkit-background-clip:text;"
    class="gradient-title-sm text-left w-full mb-[10px]"
  >
    Datos técnicos
  </h2>
  <hr class="mb-[20px]" />
  <div class="info-grid">
    <div class="info-cell">
      <TitleInfo title="Instrumentos" />
      <p class="info-cell-text">{instruments}</p>
    </div>
    <div class="info-cell">
      <TitleInfo title="Comisión" />
      <p class="info-cell-text">{fee}</p>
    </div>
    <div class="info-cell">
      <TitleInfo title="Apalancamiento" />
      <p class="info-cell-text">{leverage}</p>
    </div>
    <div class="info-cell">
      <TitleInfo title="Divisa principal" />
      <p class="info-cell-text">{currency}</p>
    </div>
    <div class="info-cell">
      <TitleInfo title="Brokers" />
      <p class="info-cell-text">{brokers}</p>
    </div>
    <div class="info-cell">
      <TitleInfo title="Plataformas" />
      <p class="info-cell-text">{platforms}</p>
    </div>
  </div>
</div>
