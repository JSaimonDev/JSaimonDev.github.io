---
import TitleInfo from "./TitleInfo.astro";

interface Props {
  phases?: string;
  maxAllocation?: string;
  maxProfit?: string;
  depositOptions?: string;
  withdrawalOptions?: string;
  scaling?: string;
  paymentType?: string;
  priceRange?: string
}

const {
  phases,
  maxAllocation,
  maxProfit,
  depositOptions,
  withdrawalOptions,
  scaling,
  paymentType,
  priceRange
} = Astro.props;
---

<div class="info-section">
  <h2
    style="background: linear-gradient(to right, #454545, #929292); -webkit-background-clip:text;"
    class="gradient-title-sm text-left w-full mb-[10px]"
  >
    Planes y condiciones
  </h2>
  <hr class="mb-[20px]" />
  <div class="info-grid">
    <div class="info-cell">
      <TitleInfo title="Fases" />
      <p class="info-cell-text">{phases}</p>
    </div>
    <div class="info-cell">
      <TitleInfo title="Capital máximo" />
      <p class="info-cell-text">
        {maxAllocation}
      </p>
    </div>
    <div class="info-cell">
      <TitleInfo title="Porcentaje de beneficio" />
      <p class="info-cell-text">{maxProfit}</p>
    </div>
    <div class="info-cell">
      <TitleInfo title="Opciones de depósito" />
      <p class="info-cell-text">
        {depositOptions}
      </p>
    </div>
    <div class="info-cell">
      <TitleInfo title="Opciones de retiro" />
      <p class="info-cell-text">
        {withdrawalOptions}
      </p>
    </div>
    <div class="info-cell">
      <TitleInfo title="Escalado" />
      <p class="info-cell-text">
        {scaling}
      </p>
    </div>
    <div class="info-cell">
      <TitleInfo title="Tipo de pago" />
      <p class="info-cell-text">
        {paymentType}
      </p>
    </div>
        <div class="info-cell">
      <TitleInfo title="Rango de precios" />
      <p class="info-cell-text">
        {priceRange}
      </p>
    </div>
  </div>
</div>
