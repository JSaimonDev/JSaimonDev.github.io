---
import { firms } from "@/libs/data/firms";
import CardReview from "../cards/CardReview.astro";

const keys = Object.keys(firms);

const defaultLogoPath = firms.FTMO.logoText;
---

<div class="flex flex-col responsive-section margin-section
design-section">
  <div
    class="grid lg:grid-cols-4 md:grid-cols-3 sm:grid-cols-2 grid-cols-1 lg:gap-[40px] md:gap-[30px] gap-[20px]"
  >
    {
      Object.keys(firms)
        .sort()
        .map((key) => (
          <CardReview
            logo={firms[key].logoText || defaultLogoPath}
            isReview={firms[key].hasReview}
            id={key}
          />
        ))
    }
  </div>
</div>
