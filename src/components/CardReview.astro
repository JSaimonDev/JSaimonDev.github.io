---
import "../styles/dual-button.css";

interface Props {
  logo: string;
}

const { logo } = Astro.props;
---

<div class="w-[400px] h-[280px]">
  <div class="w-full h-[200px]">
    <img src={logo} />
  </div>
  <div class="w-full border-2 border-light-grey"></div>
  <div class="flex h-[80px] text-xl items-center buttons">
    <button class="h-full flex-1 group duration-200 relative">
      <div class="absolute bg-[#2F2F2F] top-0 left-0 w-full h-full"></div>
      <p class="scale-100 group-hover:scale-105 ease-in-out duration-200">
        Rese√±a
      </p>
    </button>
    <button class="h-full flex-1 group duration-200 relative">
