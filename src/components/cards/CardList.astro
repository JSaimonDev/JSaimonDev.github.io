---
import { type TypeList } from "@/types.ts";

interface Props {
  name: string;
  shortDescription?: string;
  id: string;
  type?: TypeList;
  color?: "blue" | "green" | "grey" | "orangeFull";
}

const { name, shortDescription, id, color } = Astro.props;

let shadowClass = "hover:shadow-[0_0_10px_2px_rgba(217,86,19,0.5)] ";
let lineClass = "border-orange";
if (color === "blue") {
  shadowClass = "hover:shadow-[0_0_10px_2px_rgba(86,84,188,0.5)]";
  lineClass = "border-blue";
} else if (color === "green") {
  shadowClass = "hover:shadow-[0_0_10px_2px_rgba(70,130,59,0.5)]";
  lineClass = "border-green";
} else if (color === "orangeFull")
  shadowClass = "hover:shadow-[0_0_10px_2px_rgba(217,86,19,1)]";
else if (color === "grey") {
  shadowClass = "hover:shadow-[0_0_10px_2px_rgba(69,69,69,0.5)]";
  lineClass = "border-medium-grey";
}
---

<a
  href={`/listas/${id}`}
  class={`${shadowClass}  shadow-md cursor-pointer rounded-xl h-full bg-[#FFFFFF] p-6 duration-300 ease-in-out`}
>
  <div class="flex md:gap-[15px] gap-[10px]">
    <p class="xl:text-xl text-lg font-bold">{name}</p>
  </div>
  {
    shortDescription && (
      <hr class={`${lineClass} mt-[10px]`} />
      <p class="text-base text-medium-grey mt-4">{shortDescription}</p>
    )
  }
</a>
