---
import { type TypeSelection } from "@/types.ts";

interface Props {
  name: string;
  shortDescription?: string;
  id: string;
  type?: TypeSelection;
}

const { name, shortDescription, id } = Astro.props;
---

<a
  href={`/selecciones/${id}`}
  class="h-full bg-[#FFFFFF] p-6 hover:shadow-[0_0_10px_2px_rgba(217,86,19,1)] cursor-pointer rounded-xl"
>
  <p class="xl:text-xl text-lg font-bold">{name}</p>
  {
    shortDescription && (
      <p class="text-base text-medium-grey mt-4">{shortDescription}</p>
    )
  }
</a>
