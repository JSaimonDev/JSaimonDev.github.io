---
import { type Firm } from "@/libs/data/firms";

interface Props {
  firm: Firm;
  key: string;
}

const { firm, key } = Astro.props;
---

<div class="flex gap-[20px]">
  <div
    class="w-full aspect-square h-full relative cursor-pointer rounded-full 
    hover:scale-105 duration-300 ease-in-out"
    style={{ backgroundColor: firm.bgColor }}
  >
    <a href={`/promociones/${key}`}>
      <img
        src={firm.logoText}
        class="rounded-full md:shadow-[0_2px_4px_2px_rgba(0,0,0,0.3)] shadow-[0_1px_3px_1px_rgba(0,0,0,0.3)] h-full w-full relative
        object-contain"
      />
    </a>
  </div>
</div>
