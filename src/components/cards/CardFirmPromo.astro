---
import { type Firm } from "@/libs/data/firms";
import { promotions } from "@/libs/data/promotions";

interface Props {
  firm: Firm;
  key: string;
}

const { firm, key } = Astro.props;
---

<a
  href={`/promociones/${key}`}
  class={`w-full ease-in-out duration-300 transform shadow-lg relative rounded-xl ${promotions[key].length > 0 ? "hover:scale-105" : "cursor-auto"}`}
>
  {
    promotions[key].length === 0 && (
      <div class="bg-light-grey opacity-70 absolute z-10 inset-0 rounded-xl" />
    )
  }
  <img src={firm.logoText} class="rounded-xl" />
</a>
