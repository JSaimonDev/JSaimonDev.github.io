---
import { Image } from "astro:assets";
import logo from "../../../public/icons/The-GodFunded-logo.svg";
---

<nav>
  <div class="bg-[#e9e9e9] w-full h-[70px] lg:h-[90px] flex justify-center">
    <div
      class="md:max-w-[800px] lg:max-w-[980px] xl:max-w-[1200px] w-full
      justify-between items-center flex px-[20px] gap-x-[20px]"
    >
      <a href="/">
        <Image src={logo} alt="Logo" class="lg:w-[300px] w-[250px]" />
      </a>
      <button
        class="burger flex md:hidden md:scale-100 sm:scale-95 xs:scale-90 scale-[70%]
        h-[26px] w-[32px] flex-col justify-between"
      >
        <span class="line line1"></span>
        <span class="line line2"></span>
        <span class="line line3"></span>
      </button>
      <ul
        class="hidden lg:gap-x-[40px] gap-x-[30px]
        font-[600] text-[#212121]
        md:flex items-center"
      >
        <li><a href="/reviews">Reviews</a></li>
        <li><a href="/listas">Listas</a></li>
        <li><a href="/promociones">Promociones</a></li>
      </ul>
    </div>
  </div>
  <div class="md:hidden">
    <ul
      class="mobile-menu font-[600] text-[#212121] flex flex-col gap-[10px] pl-[15px] border-t-2 py-[15px]"
    >
      <li><a href="/reviews">Reviews</a></li>
      <li><a href="/listas">Listas</a></li>
      <li><a href="/promociones">Promociones</a></li>
    </ul>
  </div>
</nav>

<script>
  const burger = document.querySelector("button.burger");
  const lines = document.querySelectorAll(".line");
  const mobileMenu = document.querySelector(".mobile-menu");

  burger?.addEventListener("click", () => {
    lines.forEach((line) => {
      line.classList.toggle("clicked");
    });
    mobileMenu?.classList.toggle("hidden");
    console.log("hi");
  });
</script>

<style>
  li {
    @apply md:pl-0 xs:pl-[55px] md:text-xl sm:text-2xl xs:text-xl text-lg xs:text-left text-center xs:ml-0 ml-[-10px] cursor-pointer;
  }
  .line {
    display: block;
    height: 4px;
    width: 100%;
    border-radius: 10px;
    background: #0e2431;
  }
  .line1 {
    transform-origin: 0% 0%;
    transition: transform 0.4s ease-in-out;
  }

  .line2 {
    transition: transform 0.2s ease-in-out;
  }

  .line3 {
    transform-origin: 0% 100%;
    transition: transform 0.4s ease-in-out;
  }

  .line1.clicked {
    transform: rotate(45deg);
  }

  .line2.clicked {
    transform: scaleY(0);
  }

  .line3.clicked {
    transform: rotate(-45deg);
  }
</style>
