---
import { firms } from "@/libs/data/firms";
import BusinessInfo from "@/components/reviews/BusinessInfo.astro";
import TechInfo from "@/components/reviews/TechInfo.astro";
import { mapIds } from "@/utils";
import Review from "@/layouts/Review.astro";

export function getStaticPaths() {
  return mapIds(firms);
}
---

<Review>
  <BusinessInfo
    firm={firms.FTMO}
    hq="Praga 1, Calle Purkynova 2121/3, 110 00, República Checa"
    foundation={215}
    ceo="Otakar Suffner"
  />
  <a href={firms.FTMO.link} class="mb-[60px]">
    <button
      class="py-[20px] px-[40px] text-3xl bg-orange text-[#FFF] rounded-xl"
    >
      Crea ahora tu cuenta en FTMO
    </button>
  </a>
  <TechInfo
    brokers="Broker propio"
    currency="USD, GBP, EUR, CZK, CAD, AUD, CHF"
    fee="Divisas: 3$/lote\n Acciones: 0,004%\n Metales: 0,001%\n Índices y crypto: 0"
    leverage="1:100"
    instruments="Divisas, índices, metales y acciones"
    platforms="Metatrader 4, Metatrader 5, cTrader y DXTrade"
  />
</Review>
