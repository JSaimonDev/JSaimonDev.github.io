---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import hero_image from "../../public/images/Home-hero-ready.jpg";
import Card_review from "../components/Card-review.astro";
import { firms } from "@/libs/data/firms";
---

<Layout title="The GodFunded">
  <main>
    <div id="hero_image_wrap" class="mb-28">
      <Image
        src={hero_image}
        alt="Hero image"
        class="w-[100%]"
        id="hero_image"
      />
    </div>
    <section class="mb-12">
      <div class="flex justify-center gap-12 mb-20">
        <Card_review logo={firms.FTMO.logo} />
        <Card_review logo={firms.TFT.logo} />
        <Card_review logo={firms.FundedNext.logo} />
      </div>
      <div class="flex justify-center">
        <button
          class="border-[#2F2F2F] border-4 px-12 py-6 text-2xl font-medium scale-100 hover:scale-105 ease-in-out duration-300"
        >
          MÃ¡s empresas de fondeo</button
        >
      </div>
    </section>
    <section class="w-[900px] h-[1200px] bg-dark-grey"></section>
  </main>
</Layout>

<style>
  main {
    margin: auto;
    max-width: calc(100%);
    color: #2f2f2f;
    font-size: 20px;
    line-height: 1.6;
  }
  #hero_image {
    clip-path: polygon(0 0, 100% 0%, 100% 87%, 49% 100%, 0 87%);
  }
  #hero_image_wrap {
    filter: drop-shadow(0 3px 3px rgba(50, 50, 0, 0.5));
  }
</style>
