---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import hero_image from "../../public/images/Home-hero-ready.jpg";
import CardReview from "../components/CardReview.astro";
import CardList from "../components/CardList.astro";
import CardPromo from "../components/CardPromo.astro";
import { firms } from "@/libs/data/firms";
import { lists } from "@/libs/data/lists";
import { promotions } from "@/libs/data/promotions";
---

<Layout title="The GodFunded">
  <main>
    <div class="h-[480px] overflow-hidden arrow-clip-wrap mb-24 relative">
      <h1
        class="absolute z-10 top-[60%] left-[50%] translate-x-[-50%] text-light-grey greatVibes text-6xl text-center"
      >
        "Le voy a hacer una oferta que no podr치 rechazar"
      </h1>
      <div class="arrow-clip-hero-image h-full">
        <Image
          src={hero_image}
          alt="Hero image"
          class="object-cover scale-105"
        />
      </div>
    </div>
    <div class="flex flex-col items-center">
      <section class="mb-36">
        <div class="flex justify-center gap-[50px] mb-20">
          <CardReview logo={firms.FTMO.logoText} />
          <CardReview logo={firms.TFT.logoText} />
          <CardReview logo={firms.FundedNext.logoText} />
        </div>
        <div class="flex justify-center">
          <button
            class="border-[#2F2F2F] border-4 px-12 py-6 text-2xl font-medium scale-100 hover:scale-105 ease-in-out duration-300"
          >
            M치s empresas de fondeo</button
          >
        </div>
      </section>
      <section class="w-full bg-dark-grey p-[60px] flex flex-col items-center">
        <h2
          class="text-8xl corleone text-[#FFF] mb-16 tracking-wide squeezed-corleone"
        >
          Listas
        </h2>
        <div class="grid grid-cols-2 gap-[60px] w-[1300px] mb-20">
          <CardList
            name={lists.noSL.name}
            shortDescription={lists.noSL.shortDescription}
          />
          <CardList
            name={lists.noTimeLimit.name}
            shortDescription={lists.noTimeLimit.shortDescription}
          />
          <CardList
            name={lists.EA.name}
            shortDescription={lists.EA.shortDescription}
          />
          <CardList
            name={lists.tradingView.name}
            shortDescription={lists.tradingView.shortDescription}
          />
          <CardList
            name={lists.crypto.name}
            shortDescription={lists.EA.shortDescription}
          />
          <CardList
            name={lists.weekend.name}
            shortDescription={lists.tradingView.shortDescription}
          />
        </div>
        <div class="flex justify-center">
          <button
            class="border-[#FFF] text-[#FFF] border-4 px-12 py-6 text-2xl font-medium scale-100 hover:scale-105 ease-in-out duration-300"
          >
            M치s listas</button
          >
        </div>
      </section>
      <section class="w-full mt-[-1px] relative mb-36">
        <div
          class="bg-dark-grey h-[200px] w-full arrow-clip-section absolute -z-10"
        >
        </div>
        <div class="mt-[80px] w-full flex justify-center">
          <CardPromo
            promotion={promotions.BlueGuardian[0]}
            logo={firms.BlueGuardian.logo}
          />
        </div>
        <div class="w-full flex justify-center gap-x-[600px] mt-[-80px]">
          <CardPromo promotion={promotions.TFT[0]} logo={firms.TFT.logo} />
          <CardPromo promotion={promotions.GFT[0]} logo={firms.GFT.logo} />
        </div>
        <div class="w-full flex justify-center mt-[-110px]">
          <h2
            class="text-8xl corleone text-dark-grey mb-16 tracking-wide squeezed-corleone"
          >
            Promociones
          </h2>
        </div>
        <div class="flex justify-center">
          <button
            class="border-dark-grey text-dark-grey border-4 px-12 py-6 text-2xl font-medium scale-100 hover:scale-105 ease-in-out duration-300"
          >
            M치s ofertas y descuentos</button
          >
        </div>
      </section>
    </div>
  </main>
</Layout>

<style>
  main {
    margin: auto;
    max-width: calc(100%);
    color: #2f2f2f;
    font-size: 20px;
    line-height: 1.6;
  }
  .arrow-clip-hero-image {
    clip-path: polygon(0 0, 100% 0%, 100% 87%, 49% 100%, 0 87%);
  }
  .arrow-clip-wrap {
    filter: drop-shadow(0 3px 3px rgba(50, 50, 0, 0.5));
  }
  .arrow-clip-section {
    clip-path: polygon(0 0, 100% 0%, 100% 50%, 49% 100%, 0 50%);
  }
  .squeezed-corleone {
    transform: scale(1, 0.9);
  }
</style>
